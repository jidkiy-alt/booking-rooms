@model IEnumerable<Room>

@{
    ViewData["Title"] = "Каталог комнат";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Нет доступных переговорных комнат.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">@room.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@room.Description</p>
                            <ul class="list-unstyled">
                                <li><strong>Вместимость:</strong> @room.Capacity человек</li>
                                <li><strong>Здание:</strong> <span class="badge bg-warning">@room.Building.DisplayName</span></li>
                                <li><strong>Расположение:</strong> @room.Location</li>
                                <li><strong>Категория:</strong> <span class="badge bg-info">@room.Category.DisplayName</span></li>
                                <li>
                                    <strong>Оснащение:</strong>
                                    @if (room.RoomEquipments?.Any() == true)
                                    {
                                        <div class="mt-1">
                                            @foreach (var equipment in room.RoomEquipments.Take(3))
                                            {
                                                <span class="badge bg-primary me-1 mb-1">@equipment.Equipment.Name</span>
                                            }
                                            @if (room.RoomEquipments.Count > 3)
                                            {
                                                <small class="text-muted">+ еще @(room.RoomEquipments.Count - 3)</small>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Базовое</span>
                                    }
                                </li>
                                <li>
                                    <strong>Рейтинг:</strong> 
                                    @{
                                        var roomRating = ViewBag.RoomRatings[room.Id];
                                    }
                                    @if (roomRating > 0)
                                    {
                                        <span class="text-warning">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < Math.Round(roomRating))
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                            (@roomRating.ToString("0.0"))
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Нет оценок</span>
                                    }
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-primary w-100">
                                <i class="bi bi-eye"></i> Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>