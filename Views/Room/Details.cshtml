@model Room

@{
    ViewData["Title"] = $"Комната: {Model.Name}";
}

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-building"></i> @Model.Name
                    </h2>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.Description</p>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Характеристики:</h5>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Вместимость:</strong> @Model.Capacity человек
                                </li>
                                <li class="list-group-item">
                                    <strong>Здание:</strong> 
                                    <span class="badge bg-warning">@Model.Building.DisplayName</span>
                                    <small class="text-muted">(@Model.Building.Address)</small>
                                </li>
                                <li class="list-group-item">
                                    <strong>Расположение:</strong> @Model.Location
                                </li>
                                <li class="list-group-item">
                                    <strong>Категория:</strong> 
                                    <span class="badge bg-info">@Model.Category.DisplayName</span>
                                </li>
                                <li class="list-group-item">
                                    <strong>Оснащение:</strong>
                                    @if (Model.RoomEquipments?.Any() == true)
                                    {
                                        foreach (var roomEquipment in Model.RoomEquipments)
                                        {
                                            <span class="badge bg-primary me-1 mb-1">
                                                @roomEquipment.Equipment.Name 
                                                @if (roomEquipment.Quantity > 1)
                                                {
                                                    <small>(x@roomEquipment.Quantity)</small>
                                                }
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Базовое</span>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>Предстоящие бронирования:</h5>
                        
                        @{
                            var futureBookings = Model.Bookings
                                .Where(b => b.Status == BookingStatus.Confirmed && b.StartTime >= DateTime.Now)
                                .OrderBy(b => b.StartTime)
                                .ToList();
                        }
                        
                        @if (futureBookings.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Дата</th>
                                            <th>Время</th>
                                            <th>Цель</th>
                                            <th>Кто бронировал</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var booking in futureBookings)
                                        {
                                            <tr>
                                                <td>@booking.StartTime.ToString("dd.MM.yyyy")</td>
                                                <td>
                                                    <span class="badge bg-primary">
                                                        @booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")
                                                    </span>
                                                </td>
                                                <td>@booking.Purpose</td>
                                                <td>
                                                    @if (booking.User != null)
                                                    {
                                                        <small>@booking.User.FirstName @booking.User.LastName</small>
                                                        <br /><small class="text-muted">@booking.User.Email</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Пользователь не найден</small>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <p class="text-muted small mt-2">
                                <i class="bi bi-info-circle"></i> Показаны только предстоящие бронирования
                            </p>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="bi bi-calendar-check"></i> Комната свободна для бронирования!
                            </div>
                        }
                    </div>

                    <div class="mt-3">
                        <p class="text-muted">
                            <strong>Всего бронирований:</strong> @Model.Bookings.Count(b => b.Status == BookingStatus.Confirmed)
                        </p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card shadow">
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-chat-left-text"></i> Отзывы о комнате
                                    @if (ViewBag.AverageRating > 0)
                                    {
                                        <span class="badge bg-warning ms-2">
                                            @ViewBag.AverageRating.ToString("0.0") ★
                                        </span>
                                    }
                                </h5>
                            </div>
                            <div class="card-body">
                                
                                <!-- отзыв -->
                                @if (ViewBag.CurrentUser != null && !ViewBag.HasUserReviewed)
                                {
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <h6>Оставить отзыв</h6>
                                            <form method="post" asp-controller="Review" asp-action="Create">
                                                <input type="hidden" name="roomId" value="@Model.Id" />
                                                
                                                <div class="mb-3">
                                                    <label class="form-label">Оценка:</label>
                                                    <div>
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" name="rating" value="@i" id="rating@i" required>
                                                                <label class="form-check-label" for="rating@i">
                                                                    @for (int j = 0; j < i; j++) { 
                                                                        <i class="bi bi-star-fill text-warning"></i> 
                                                                    }
                                                                    @for (int j = i; j < 5; j++) { 
                                                                        <i class="bi bi-star text-warning"></i> 
                                                                    }
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label class="form-label">Комментарий:</label>
                                                    <textarea name="comment" class="form-control" rows="3" required maxlength="1000" 
                                                            placeholder="Поделитесь впечатлениями о комнате..."></textarea>
                                                </div>
                                                
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="bi bi-send"></i> Отправить отзыв
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                }
                                else if (ViewBag.CurrentUser != null)
                                {
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i> Вы уже оставляли отзыв для этой комнаты
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="bi bi-exclamation-circle"></i> 
                                        <a asp-controller="Auth" asp-action="Login" class="alert-link">Войдите</a> 
                                        в систему, чтобы оставить отзыв
                                    </div>
                                }

                                <!-- cписок отзывов -->
                                <div id="reviewsList">
                                    @if (ViewBag.Reviews != null && ViewBag.Reviews.Count > 0)
                                    {
                                        @foreach (var review in ViewBag.Reviews)
                                        {
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                                <h6 class="mb-0">@review.User.FirstName @review.User.LastName</h6>
                                                                <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                            </div>
                                                            <div class="mb-2">
                                                                @for (int i = 0; i < 5; i++)
                                                                {
                                                                    if (i < review.Rating)
                                                                    {
                                                                        <i class="bi bi-star-fill text-warning"></i>
                                                                    }
                                                                    else
                                                                    {
                                                                        <i class="bi bi-star text-warning"></i>
                                                                    }
                                                                }
                                                                <span class="ms-2 text-muted small">@review.Rating/5</span>
                                                            </div>
                                                            <p class="mb-0">@review.Comment</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted py-4">
                                            <i class="bi bi-chat-left-text display-4"></i>
                                            <p class="mt-2">Отзывов пока нет</p>
                                            <small>Будьте первым, кто оставит отзыв об этой комнате!</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Назад к списку
                        </a>
                        <a asp-action="Book" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="bi bi-calendar-plus"></i> Забронировать
                        </a>
                        
                        @if (ViewBag.CurrentUser?.IsAdmin == true)
                        {
                            <a asp-action="Edit" asp-controller="RoomEquipment" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="bi bi-tools"></i> Редактировать оборудование
                            </a>
                            <a asp-action="DeleteRoom" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-tools"></i> Удалить комнату
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>