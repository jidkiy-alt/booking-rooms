@using ASPNET_PROJECT.ViewModels
@model EditRoomEquipmentViewModel

@{
    ViewData["Title"] = $"Оборудование: {Model.RoomName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-tools"></i> @ViewData["Title"]
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">@Model.RoomDescription</p>
                    
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="RoomName" />
                        <input type="hidden" asp-for="RoomDescription" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">Выберите оборудование:</label>
                            
                            @if (Model.AvailableEquipments.Any())
                            {
                                <div class="row">
                                    @foreach (var equipment in Model.AvailableEquipments)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card @(equipment.IsSelected ? "border-primary" : "")">
                                                <div class="card-body">
                                                    <div class="form-check">
                                                        <input type="checkbox" 
                                                               class="form-check-input"
                                                               name="SelectedEquipmentIds" 
                                                               value="@equipment.Id"
                                                               id="equipment_@equipment.Id"
                                                               @(equipment.IsSelected ? "checked" : "") />
                                                        <label class="form-check-label fw-bold" for="equipment_@equipment.Id">
                                                            @equipment.Name
                                                        </label>
                                                    </div>
                                                    <small class="text-muted">@equipment.Description</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Нет доступного оборудования
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Сохранить
                            </button>
                            <a asp-action="Details" asp-controller="Room" asp-route-id="@Model.RoomId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">Текущее оборудование</h6>
                </div>
                <div class="card-body">
                    @if (Model.AvailableEquipments.Any(e => e.IsSelected))
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var equipment in Model.AvailableEquipments.Where(e => e.IsSelected))
                            {
                                <span class="badge bg-primary">@equipment.Name</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small">Оборудование не выбрано</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>